{
  "compilerOptions": {
    /* Project structure */
    "rootDir": "./src",
    "outDir": "./dist",

    /* ESM setup */
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "target": "ES2020",

    /* Runtime */
    "lib": ["ES2020"],

    /* Type safety */
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,

    /* Interop */
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    /* Output */
    "sourceMap": true,
    "skipLibCheck": true
  },
  "include": ["src","src/types"],
  "exclude": ["node_modules", "dist"]
}
